<?xml version="1.0" encoding="utf-8" ?>
<!--相當於做了一張圓角的圖片,然後給button作為背景圖片-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--設定背景色-->
    <solid android:color="#DC6B20" />
    <!--設定圓角-->
    <corners android:radius="105dip" />
    <padding
        android:bottom="12dp"
        android:left="63dp"
        android:right="63dp"
        android:top="12dp"
        />
    <!--設定邊框線的寬度和顏色-->

</shape>
